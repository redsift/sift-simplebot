{
  "name": "sift-simplebot",
  "display-name": "Simplebot Sift",
  "description": "",
  "author": "",
  "version": "1.0.0",
  "icon": "assets/blueprint.svg",
  "interfaces": {
    "summary": {
      "controller": "dist/js/controller.umd-es2015.min.js"
    }
  },
  "dag": {
    "inputs": {
      "slack-bot": {
        "_config": {
          "clientID": "47738535073.65822105094",
          "ambientMentionDuration": 300,
          "permission": "personal"
        },
        "all": {
          "filter": {
            "conditions": [
              {
                "type": "message:direct_mention,direct_message"
              },
              {
                "text": {
                  "regexp": {
                    "pattern": ".*",
                    "flags": "i"
                  }
                }
              }
            ],
            "operator": "AND"
          }
        },
        "actions": {
          "filter": {
            "conditions": [
              {
                "actions": {}
              }
            ]
          }
        }
      }
    },
    "nodes": [
      {
        "#": "Slack bot",
        "implementation": {
          "javascript": "server/slack-bot.js"
        },
        "input": {
          "bucket": "all",
          "lookup": [{
            "bucket": "server",
            "key": "slack/bot_access_token"
          },
          {
            "bucket": "server",
            "key": "account/uuid"
          }]
        },
        "outputs": {
          "messages": {}
        }
      },
      {
        "#": "Slack bot actions",
        "implementation": {
          "javascript": "server/slack-actions.js"
        },
        "input": {
          "bucket": "actions"
        },
        "outputs": {
          "messages": {}
        }
      },
      {
        "#": "Slack bot welcome message",
        "implementation": {
          "javascript": "server/slack-welcome.js"
        },
        "input": {
          "bucket": "server",
          "select": "slack/*",
          "lookup": [{
            "bucket": "server",
            "key": "account/uuid"
          }]
        },
        "outputs": {
          "messages": {}
        }
      }
    ],
    "stores": {
     "messages": {
        "key$schema": "string"
      },
      "server": {
        "import": "_server"
      }
    },
    "outputs": {
    }
  }
}
