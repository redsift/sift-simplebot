{
  "name": "sift-simplebot",
  "display-name": "Sift Simplebot",
  "description": "",
  "author": "",
  "version": "1.0.0",
  "icon": "https://static.redsift.io/assets/sifts/template/blueprint.svg",
  "interfaces": {
    "email": {
      "thread": {
        "controller": "dist/js/controller.umd-es2015.js"
      },
      "client": {
        "controller": "dist/js/email-client-controller.umd-es2015.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.js"
    }
  },
  "dag": {
    "inputs": {
      "slack-bot": {
        "_config": {
          "clientID": "47738535073.65822105094",
          "ambientMentionDuration": 300,
          "permission": "personal"
        },
        "all": {
          "filter": {
            "conditions": [
              {
                "type": "message:direct_mention,direct_message"
              },
              {
                "text": {
                  "regexp": {
                    "pattern": ".*",
                    "flags": "i"
                  }
                }
              }
            ],
            "operator": "AND"
          }
        },
        "actions1": {
          "filter": {
            "conditions": [
              {
                "actions": {}
              }
            ]
          }
        }
      },
      "emails": {
        "gmailEmails": {
          "filter": {
            "conditions": [
              {
                "from": {
                  "regexp": {
                    "pattern": ".*@gmail\\.com",
                    "flags": "i"
                  }
                }
              },
              {
                "date": "between now and 1 month before now"
              }
            ],
            "operator": "AND"
          },
          "wants": [
            "archive",
            "textBody",
            "strippedHtmlBody"
          ]
        }
      }
    },
    "nodes": [
      {
        "#": "Slack bot",
        "implementation": {
          "javascript": "server/slackbot.js"
        },
        "input": {
          "bucket": "all"
        },
        "outputs": {
          "messages": {}
        }
      },
      {
        "#": "Slack bot actions",
        "implementation": {
          "javascript": "server/slack-actions.js"
        },
        "input": {
          "bucket": "actions1"
        },
        "outputs": {
          "messages": {}
        }
      },
      {
        "#": "Parse",
        "implementation": {
          "javascript": "server/parse.js"
        },
        "input": {
          "bucket": "gmailEmails"
        },
        "outputs": {
          "messages": {},
          "threads": {}
        }
      },
      {
        "#": "Count",
        "implementation": {
          "javascript": "server/count.js"
        },
        "input": {
          "bucket": "messages",
          "select": "*"
        },
        "outputs": {
          "count": {}
        }
      }
    ],
    "stores": {
      "messages": {
        "key$schema": "string"
      }
    },
    "outputs": {
      "exports": {
        "count": {
          "key$schema": "string"
        },
        "threads": {
          "import": "_email.tid"
        }
      }
    }
  }
}